{
  "name": "artanis-auth",
  "version": "1.0.0",
  "description": "Unified authentication service for benloe.com ecosystem",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --minify",
    "dev": "tsx watch src/server.ts",
    "dev:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean-code": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint && npm run format:check"
  },
  "keywords": [
    "auth",
    "authentication",
    "jwt",
    "magic-link"
  ],
  "author": "Ben Loe",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.3",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "prisma": "^5.6.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2"
  }
}
