<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifying Login - benloe.com</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link href="/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full space-y-8 p-8">
        <div class="text-center">
            <div id="spinner" class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Verifying your login...</h2>
        </div>
        
        <div id="result" class="hidden">
            <div id="message" class="text-center p-4 rounded-md"></div>
        </div>
    </div>

    <script>
        const token = '<%= token || "" %>';
        const redirectUrl = '<%= redirect || "/dashboard" %>';
        
        async function verifyToken() {
            if (!token) {
                showError('Invalid or missing token');
                return;
            }
            
            try {
                const response = await fetch('/api/auth/verify', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({ token }),
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showSuccess('Login successful! Redirecting...');
                    setTimeout(() => {
                        window.location.href = redirectUrl;
                    }, 1500);
                } else {
                    showError(data.error || 'Verification failed');
                }
            } catch (error) {
                showError('Network error. Please try again.');
            }
        }
        
        function showSuccess(message) {
            document.getElementById('spinner').classList.add('hidden');
            const messageDiv = document.getElementById('message');
            messageDiv.className = 'text-center p-4 rounded-md bg-green-50 border border-green-200 text-green-800';
            messageDiv.textContent = message;
            document.getElementById('result').classList.remove('hidden');
        }
        
        function showError(message) {
            document.getElementById('spinner').classList.add('hidden');
            const messageDiv = document.getElementById('message');
            messageDiv.className = 'text-center p-4 rounded-md bg-red-50 border border-red-200 text-red-800';
            messageDiv.textContent = message;
            document.getElementById('result').classList.remove('hidden');
            
            // Show retry link after error
            setTimeout(() => {
                messageDiv.innerHTML = message + '<br><br><a href="/" class="text-blue-600 hover:text-blue-800 underline">Go back to login</a>';
            }, 2000);
        }
        
        // Start verification when page loads
        verifyToken();
    </script>
</body>
</html>