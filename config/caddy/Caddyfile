# Main Caddyfile for benloe.com and subdomains

# Root domain
benloe.com {
    root * /var/apps/static/benloe.com
    file_server
    encode gzip
}

# www redirect
www.benloe.com {
    redir https://benloe.com{uri} permanent
}

# Import subdomain configurations if they exist
import /var/apps/config/caddy/Caddyfile.d/*
